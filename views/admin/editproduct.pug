extends ./common

append style
  link(rel="stylesheet", href="/styles/admin/addproduct.css")

block main
  div
    big Thêm sản phẩm mới
    form.mt-4(method="POST", name="editProForm")
      input(type="hidden", name="_method", value="PUT")
      .d-flex.align-items-center
        label.col-2(for="namePro") Tên sản phẩm:
        input#namePro.form-control.col.ml-2(type="text", name="nameProduct", placeholder="Tên sản phẩm", required, value=product.name)
      .d-flex.mt-2.align-items-center
        span.col-2.mr-2 Danh mục: &nbsp;
        select.form-control.col(name="loai0", required, data-value=product.loai0)
        select.form-control.col(name="loai1", required, data-value=product.loai1)
        select.form-control.col(name="loai2", required, data-value=product.loai2)
      .d-flex.mt-2
        label.col-2(for="describePro") Mô tả sản phẩm:
        textarea#describePro.col.ml-2(name="describePro", rows="10", required)= product.describe
      .d-flex.mt-2.align-items-center
        label.col-2(for="brand") Thương hiệu:
        select#brand.form-control.col.ml-2(name="brand", required)
          each brand in brands
            option(value=brand.ma_thuonghieu, selected=product.brand===brand.ma_thuonghieu?true:false)= brand.ten_thuonghieu
      .d-flex.mt-2.align-items-center
        label.col-2(for="material") Chất liệu:
        select#material.form-control.col.ml-2(name="material", required)
          each material in materials
            option(value=material.ma_chatlieu, selected=product.material===material.ma_chatlieu?true:false)= material.ten_chatlieu
      .d-flex.mt-2.align-items-center
        label.col-2(for="price") Giá:
        input#price.form-control.col.ml-2(type="number", name="price", placeholder="₫", required, value=product.price)
      .d-flex.mt-2.align-items-center
        label.col-2(for="promotion")  Khuyến mãi:
        input#promotion.form-control.col.ml-2(type="number", name="promotion", required , value=product.promotion)
      .d-flex.mt-2.align-items-center
        span.col-2 Hình ảnh sản phẩm:
        .d-flex.col.ml-2.justify-content-between
          each img, index in product.imgs
            .img-pro.text-center
              .review-img(style=`background-image: url('${img}')`)
              label.btn.btn-light= `Hình ${index + 1}`
      .d-flex.mt-2.align-items-center.flex-wrap
        span.col-2 Phân loại sản phẩm:
        #type-pro.col
          each typePro in product.types
            .d-flex.mb-2
              input.form-control.col.ml-2(type="text", name="color", placeholder="Màu", required, value=typePro.color)
              input.form-control.col.ml-2(type="text", name="size", placeholder="Size", required, value=typePro.size)
              input.form-control.col.ml-2(type="number", name="amount", placeholder="Số lượng nhập", required, value=typePro.amount)
              button.btn.btn-danger.ml-2(type="button") x
        .text-right.col-12
          button#add-typepro-btn.btn.btn-light(type="button") + phân loại
      .text-right.my-4
        a.btn.btn-light.mr-3(href="/admin/product", role="button") Hủy
        button#save-and-hide-btn.btn.btn-light.mr-3(type="button") Sửa & Ẩn
        button#save-and-show-btn.btn.btn-success.mr-3(type="button") Sửả & Hiển thị

append script
  script(src="/scripts/admin/editproduct.js")
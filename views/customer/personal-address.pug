extends ./personal-common

block style_sub
  link(rel="stylesheet", href="/styles/customer/personal-address.css")

block main-personal
  #personal-right.col-md-8.col-lg-9
    #personnal-right-top.d-flex.justify-content-between
      div Địa chỉ của tôi
      button.btn.btn-danger(type="button", data-toggle='modal', data-target='#add-address')
        i.fas.fa-plus
        span  Thêm địa chỉ mới
    #personnal-right-middle
      //- div Bạn chưa có địa chỉ
      .personal-address.py-2.d-flex
        .personal-address-left.flex-fill
          .d-flex.align-items-center
            .personal-address-label Tên
            .personal-address-content Nguyễn Anh Hải
            .personal-address-default.ml-2
              span.badge.badge-success Mặc định
          .d-flex.align-items-center.mt-3
            .personal-address-label Số điện thoại
            .personal-address-content 0971642551
          .d-flex.align-items-center.mt-3
            .personal-address-label Địa chỉ
            .personal-address-content
              span
                | Hòa Phú
                br
                | Xuân Hòa
                br
                | Thị xã Sông Cầu
                br
                | Phú Yên
        .personal-address-right.text-right
          .personal-address-right-top
            button.btn.btn-link(type="button", data-toggle='modal', data-target='#add-address') Sửa
            button.btn.btn-link(type="button", data-toggle='modal', data-target='#delete-address') Xóa
          .personal-address-right-bottom
            button.btn.btn-light.not-allowed(type="button" disabled) Thiết lập mặc định
        
      .personal-address.py-2.d-flex
        .personal-address-left.flex-fill
          .d-flex.align-items-center
            .personal-address-label Tên
            .personal-address-content Nguyễn Anh Hải
            //- .personal-address-default.ml-2
            //-   span.badge.badge-success Mặc định
          .d-flex.align-items-center.mt-3
            .personal-address-label Số điện thoại
            .personal-address-content 0971642551
          .d-flex.align-items-center.mt-3
            .personal-address-label Địa chỉ
            .personal-address-content
              span
                | Hòa Phú
                br
                | Xuân Hòa
                br
                | Thị xã Sông Cầu
                br
                | Phú Yên
        .personal-address-right.text-right
          .personal-address-right-top
            button.btn.btn-link(type="button", data-toggle='modal', data-target='#add-address') Sửa
            button.btn.btn-link(type="button", data-toggle='modal', data-target='#delete-address') Xóa
          .personal-address-right-bottom
            button.btn.btn-light(type="button") Thiết lập mặc định
  
  #add-address.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel-addAddress', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h4#exampleModalLabel-addAddress.modal-title Thêm một địa chỉ mới
        .modal-body
          form()
            .form-group
              input.form-control(type="text" placeholder="Tên" name="name" required)
            .form-group
              input.form-control(type="text" placeholder="Số điện thoại" name="phone" required)
            .form-group
              select.form-control(name="tinh")
                option(value="1") Tỉnh/Thành phố
            .form-group
              select.form-control(name="huyen")
                option(value="1") Quận/Huyện
            .form-group
              select.form-control(name="xz")
                option(value="1") Phường/Xã
            .form-group
              input.form-control(type="text" placeholder="Tòa nhà, tên đường" name="homenum" required)
        .modal-footer
          button.btn.btn-light(type='button', data-dismiss='modal') TRỞ LẠI
          button.btn.btn-danger(type='button') HOÀN THÀNH
  #delete-address.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content.p-2
        .modal-body
          .py-5 Bạn có chắc muốn xoá địa chỉ này?
          .d-flex
            button.btn.btn-danger.flex-fill.mr-1(type='button') XÓA
            button.btn.btn-light.flex-fill(type='button', data-dismiss='modal') TRỞ LẠI
    
